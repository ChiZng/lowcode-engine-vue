{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "pnpm -C packages/vue-simulator-renderer start",
    "build": "pnpm -r build",
    "lint": "pnpm run lint:code && pnpm run lint:type",
    "lint:code": "eslint ./packages/**/*.ts && stylelint ./packages/**/*.less",
    "lint:type": "pnpm -r lint:type",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.16.9",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitest/coverage-istanbul": "^0.31.1",
    "@vue/compiler-sfc": "~3.2.47",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.12.0",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "postcss": "8.4.14",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-less": "^1.0.6",
    "typescript": "^4.9.5",
    "vitest": "^0.31.0",
    "vue": "~3.2.47"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{less,css}": [
      "stylelint --fix"
    ]
  },
  "author": "KNXCloud",
  "license": "MIT"
}
